@model ClassLibrary.CarType
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.TypeId)
    <div class="form-group row">
        @Html.LabelFor(x => x.TypeName, new { @class = "col-2 col-form-label-sm text-right" })
        <div class="col-4">
            @Html.TextBoxFor(x => x.TypeName, new { @class = "form-control form-control-sm" })
            @Html.ValidationMessageFor(x => x.TypeName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-4 offset-2">
            <button type="submit" class="btn btn-primary btn-sm">save</button>
            <button type="reset" class="btn btn-secondary btn-sm">cancel</button>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-4 offset-2">
            <a href="@Url.Action("Index","CarTypes")" class="btn"> Back to list</a>
        </div>
    </div>
}
@section scripts{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}

