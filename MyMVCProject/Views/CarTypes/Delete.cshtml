@model ClassLibrary.CarType
@{
    ViewBag.Title = "Delete";
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.TypeId)
    <div class="card">
        <div class="card-header" style="background-color:#ffd868;">
            <h3>Are you sure to delete this?</h3>
        </div>
        <div class="card-body" style="background-color:#7fcd91;">
            <h5 class="card-title">
                Type Id: @Model.TypeId<br />Type Name: @Model.TypeName
            </h5>
            <p class="card-text">
                <button type="submit" class="btn btn-danger btn-sm"><i class="fa fa-trash"> Delete</i></button>
            </p>
            <a href="@Url.Action("Index","CarTypes")" class="card-link">Back to list</a>
        </div>
    </div>
}