@model IEnumerable<ClassLibrary.CheckAvailability>
@{
    ViewBag.Title = "Index";
}

<h2>Available Customers</h2>
<div class="d-flex justify-content-end mb-1">
    @Html.ActionLink("Add", "Create", "CheckAvailabilities", new { }, new { @class = "btn btn-outline-info btn-sm" })
</div>
<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(x => x.Id)</th>
            <th>@Html.DisplayNameFor(x => x.Name)</th>
            <th>@Html.DisplayNameFor(x => x.Eamil)</th>
            <th>@Html.DisplayNameFor(x => x.Date)</th>
            <th>@Html.DisplayNameFor(x => x.TradeIn)</th>
            <th>@Html.DisplayNameFor(x => x.Car.Model)</th>
            <th>...</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var a in Model)
        {
        <tr>
            <td>@Html.DisplayFor(x => a.Id)</td>
            <td>@Html.DisplayFor(x => a.Name)</td>
            <td>@Html.DisplayFor(x => a.Eamil)</td>
            <td>@Html.DisplayFor(x => a.Date)</td>
            <td>@Html.DisplayFor(x => a.TradeIn)</td>
            <td>@Html.DisplayFor(x => a.Car.Model)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", "CheckAvailabilities", new { id = a.Id }, new { @class = "btn btn-outline-info btn-sm" })
                @Html.ActionLink("Delete", "Delete", "CheckAvailabilities", new { id = a.Id }, new { @class = "btn btn-outline-danger btn-sm" })
            </td>
        </tr>
        }
    </tbody>
</table>

