@model ClassLibrary.CheckAvailability
@{
                /**/

                ViewBag.Title = "Delete";
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.Id)
    <div class="card">
        <div class="card-header" style="background-color:#ffd868;">
            <h3>Are you sure to delete this?</h3>
        </div>
        <div class="card-body" style="background-color:#7fcd91;">
            <h5 class="card-title">
                Id: @Model.Id<br />
                Name: @Model.Name<br />
                Email: @Model.Eamil<br />
                Entry Date: @Model.Date.ToString("dd-MM-yyyy")<br />
                Model: @Model.Car.Model<br />
            </h5>
            <p class="card-text">
                <button type="submit" class="btn btn-danger btn-sm"><i class="fa fa-trash"> Delete</i></button>
            </p>
            <a href="@Url.Action("Index","CheckAvailabilities")" class="card-link">Back to list</a>
        </div>
    </div>
}