@using ClassLibrary;
@model ClassLibrary.CheckAvailability
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(x=>x.Id)
    <div class="form-group row">
        @Html.LabelFor(x => x.Name, new { @class = "col-2 col-form-label-sm text-right" })
        <div class="col-3">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control form-control-sm" })
            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(x => x.Eamil, new { @class = "col-1 col-form-label-sm text-right" })
        <div class="col-3">
            @Html.EditorFor(x => x.Eamil, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
            @Html.ValidationMessageFor(x => x.Eamil, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.Date, new { @class = "col-control-label col-2 text-right" })
        <div class="col-3" id="join">
            @Html.EditorFor(x => x.Date, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
            @Html.ValidationMessageFor(x => x.Date, null, new { @class = "text-danger" })
        </div>
        @Html.LabelFor(x => x.Car.Model, new { @class = "col-control-label col-1 text-right" })
        <div class="col-3">
            @Html.DropDownListFor(x => x.CarId, new SelectList(ViewBag.CarList, "CarId", "Model"), "-Select-", new { @class = "form-control form-control-sm" })
            @Html.ValidationMessageFor(x => x.CarId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(model => model.TradeIn, htmlAttributes: new { @class = "col-control-label col-4 text-right" })
        <div class="col-md-2">
            @Html.CheckBoxFor(x => x.TradeIn, new { @class = "form-control-sm" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-4 offset-2">
            <button type="submit" class="btn btn-primary btn-sm">save</button>
            <button type="reset" class="btn btn-secondary btn-sm">cancel</button>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-4 offset-2">
            <a href="@Url.Action("Index","CheckAvailabilities")" class="btn"> Back to list</a>
        </div>
    </div>
}

@section styles{

    <link href="~/Content/bootstrap-datepicker.standalone.css" rel="stylesheet" />
}

@section scripts{
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script>
        $(document).ready(() => {
            $("#join input").datepicker(
                {
                    format: "yyyy-mm-dd"
                }
            );
        });
    </script>
}

