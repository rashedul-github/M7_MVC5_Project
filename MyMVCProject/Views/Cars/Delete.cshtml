@model ClassLibrary.Car
@{
    ViewBag.Title = "Delete";
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.CarId)
    <div class="card">
        <div class="card-header" style="background-color:#ffd868;">
            <h3>Are you sure to delete this?</h3>
        </div>
        <div class="card-body" style="background-color:#7fcd91;">
            <h5 class="card-title">
                <img src="/Images/@Model.Picture" width="50" class="rounded" /><br />
                Model: @Model.Model<br />Price: @Model.Price<br />Type: @Model.CarType.TypeName
            </h5>
            <p class="card-text">
                <button type="submit" class="btn btn-danger btn-sm"><i class="fa fa-trash"> Delete</i></button>
            </p>
            <a href="@Url.Action("Index","Cars")" class="card-link">Back to list</a>
        </div>
    </div>
}


